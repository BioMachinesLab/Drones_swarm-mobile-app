<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:background="@color/material_blue_grey_800"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/map" android:layout_marginBottom="100dp"
            tools:context="pt.iscte.drones_swarm_mobile_app.Activities.MainActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="650dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:weightSum="1"
            android:gravity="left">

            <SeekBar
                android:id="@+id/seekbar_left_control1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/controlbarseekbackground"
                android:thumb="@drawable/control1"
                android:layout_weight="0.5"/>

            <FrameLayout
                android:orientation="vertical"
                android:layout_width="139dp"
                android:layout_height="75dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:src="@drawable/controlbackground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Left Control \n 0%"
                    android:layout_gravity="center"
                    android:id="@+id/textview_left_control1"
                    android:autoText="false"
                    android:textSize="20dp" />

            </FrameLayout>

            <SeekBar
                android:id="@+id/seekbar_left_control2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/controlbarseekbackground"
                android:thumb="@drawable/control2"
                android:layout_weight="0.5" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_gravity="right|bottom"
            android:weightSum="1"
            android:gravity="right">

            <SeekBar
                android:id="@+id/seekbar_right_control1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/controlbarseekbackground"
                android:thumb="@drawable/control1"
                android:layout_weight="0.5" />

            <FrameLayout
                android:orientation="vertical"
                android:layout_width="139dp"
                android:layout_height="75dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView22"
                    android:src="@drawable/controlbackground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Right Control \n 0%"
                    android:layout_gravity="center"
                    android:id="@+id/textview_right_control1"
                    android:autoText="false"
                    android:textSize="20dp" />

            </FrameLayout>

            <SeekBar
                android:id="@+id/seekbar_right_control2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/controlbarseekbackground"
                android:thumb="@drawable/control2"
                android:layout_weight="0.5"/>


        </LinearLayout>




    </FrameLayout>


    <!-- LEFT MENU -->
    <!-- android:layout_gravity="start" -->
    <ScrollView
        android:id="@+id/scrollView_left_menu"
        android:layout_width="240dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#37474f">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_spinner_left_menu_drone"
                android:orientation="vertical"
                android:background="#818181"
                android:layout_centerHorizontal="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinner_left_menu_drone"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:popupBackground="#605e5e"
                    android:layout_height="50dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView_battery_status_header"
                android:layout_below="@+id/layout_spinner_left_menu_drone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:layout_marginLeft="10dp"
                android:text="Battery Status"
                android:textColor="#fff"/>
            <View
                android:id="@+id/line1"
                android:layout_below="@+id/textView_battery_status_header"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/linearLayout_status_batteries"
                android:layout_below="@+id/line1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView_battery1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/battery"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/textView_battery_status1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battery Status 1"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/textView_percentage1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView_battery2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/battery"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/textView_battery_status2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Battery Status 2"/>

                    <TextView
                        android:id="@+id/textView_percentage2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_status_battery3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView_battery3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/battery"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/textView_battery_status3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Battery Status 3"/>

                    <TextView
                        android:id="@+id/textView_percentage3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView_gps_data_header"
                android:layout_below="@+id/linearLayout_status_batteries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:paddingTop="12dp"
                android:layout_marginLeft="10dp"
                android:text="GPS Data"/>

            <View
                android:id="@+id/line2"
                android:layout_below="@+id/textView_gps_data_header"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:id="@+id/linearLayout_gps_data"
                android:layout_below="@+id/line2"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@layout/customborder"
                    android:layout_width="100dp"
                    android:layout_height="25dp">

                    <ImageView
                        android:id="@+id/imageView_details_gps_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/details"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:id="@+id/textView_details_gps_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="2dp"
                        android:text="Details" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_hasfix_details_gps_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="Has Fix         ->___________"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_latitude_details_gps_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="Latitude        ->___________" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_longitude_details_gps_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="Longitude    ->___________" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_velocity_details_gps_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="Vel.(Km/h)  ->___________"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_time_details_gps_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="Time              ->___________" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_satview_details_gps_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="Sat.View      ->___________"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_satused_details_gps_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="Sat.Used      ->___________"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_hdop_details_gps_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="HDOP            ->___________" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_pdop_details_gps_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="PDOP            ->___________"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_vdop_details_gps_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="VDOP            ->___________"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView_refresh_rate_header"
                android:layout_below="@+id/linearLayout_gps_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refresh Rate"
                android:textColor="#fff"
                android:paddingTop="12dp"
                android:layout_marginLeft="10dp"/>

            <View
                android:id="@+id/line3"
                android:layout_below="@+id/textView_refresh_rate_header"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:id="@+id/linearLayout_refresh_rate_data"
                android:layout_below="@+id/line3"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@layout/customborder"
                    android:layout_width="100dp"
                    android:layout_height="25dp">

                    <ImageView
                        android:id="@+id/imageView_details_refresh_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/details"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:id="@+id/textView_details_refresh_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="2dp"
                        android:text="Details" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_spinner_left_menu_refresh_rate"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_actual_rate_refresh_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actual Rate"
                        android:layout_marginLeft="13dp" />

                    <Spinner
                        android:id="@+id/spinner_left_menu_refresh_rate"
                        android:layout_width="fill_parent"
                        android:popupBackground="#605e5e"
                        android:layout_marginLeft="30dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView_drone_messages_header"
                android:layout_below="@+id/linearLayout_refresh_rate_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drone Messages"
                android:textColor="#fff"
                android:paddingTop="12dp"
                android:layout_marginLeft="10dp"/>

            <View
                android:id="@+id/line4"
                android:layout_below="@+id/textView_drone_messages_header"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/darker_gray"/>

            <ScrollView
                android:id="@+id/scrollView_drone_messages"
                android:layout_below="@+id/line4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp"
                android:fadeScrollbars="false"
                android:background="@layout/customborder">

                <TextView
                    android:id="@+id/textView_drone_messages"
                    android:layout_below="@+id/linearLayout_refresh_rate_data"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="6dp"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:paddingTop="12dp" />

            </ScrollView>

        </RelativeLayout>
    </ScrollView>

    <!-- RIGHT MENU -->
    <!-- android:layout_gravity="right" -->
    <ScrollView
        android:id="@+id/scrollView_right_menu"
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#37474f">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_about_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:paddingTop="12dp"
                android:layout_marginLeft="10dp"
                android:text="About"/>

            <View
                android:id="@+id/line5"
                android:layout_below="@+id/textView_about_header"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:id="@+id/layout_about1_right_menu"
                android:layout_below="@+id/line5"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_speed_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/textView_speed_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textColor="#fff"
                    android:layout_marginTop="2dp"
                    android:text="Speed Limit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_about2_right_menu"
                android:layout_below="@+id/layout_about1_right_menu"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_speed_limit_value"
                    android:layout_width="33dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#fff"
                    android:text="100" />

                <SeekBar
                    android:id="@+id/seekbar_speed_limit_right_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:max="100"
                    android:progress="100"
                    android:thumb="@drawable/steekbar_thumb"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_about3_right_menu"
                android:layout_below="@+id/layout_about2_right_menu"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_motor_offset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/textView_motor_offset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textColor="#fff"
                    android:layout_marginTop="2dp"
                    android:text="Motor Offset" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_about4_right_menu"
                android:layout_below="@+id/layout_about3_right_menu"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_motor_offset_value"
                    android:layout_width="33dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#fff"
                    android:text="0" />

                <SeekBar
                    android:id="@+id/seekbar_motor_offset_right_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:max="200"
                    android:progress="100"
                    android:thumb="@drawable/steekbar_thumb"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textView_commands_header"
                android:layout_below="@+id/layout_about4_right_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:paddingTop="12dp"
                android:layout_marginLeft="10dp"
                android:text="Commands"/>

            <View
                android:id="@+id/line6"
                android:layout_below="@+id/textView_commands_header"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:id="@+id/layout_commands_right_menu"
                android:layout_below="@+id/line6"
                android:background="@layout/customborder"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Spinner
                    android:id="@+id/spinner_right_menu_commands"
                    android:layout_width="fill_parent"
                    android:popupBackground="#605e5e"
                    android:layout_height="fill_parent"/>
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView_commands"
                android:layout_below="@+id/layout_commands_right_menu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp"
                android:fadeScrollbars="false"
                android:background="@layout/customborder">

                <EditText
                    android:id="@+id/editText_commands"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="6dp"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:paddingTop="12dp" />

            </ScrollView>

            <LinearLayout
                android:id="@+id/layout_buttons1_right_menu"
                android:layout_below="@+id/scrollView_commands"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <Button
                    android:id="@+id/button_start_right_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start" />

                <Button
                    android:id="@+id/button_stop_right_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stop" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_buttons2_right_menu"
                android:layout_below="@+id/layout_buttons1_right_menu"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:id="@+id/button_deploy_right_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deploy" />

                <Button
                    android:id="@+id/button_stop_all_right_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stop All" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_buttons3_right_menu"
                android:layout_below="@+id/layout_buttons2_right_menu"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText_buttons"
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:background="#fff" />

                <Button
                    android:id="@+id/button_send_log_right_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Log" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


