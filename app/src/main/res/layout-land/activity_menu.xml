<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#D1D1D1"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <ImageView
        android:id="@+id/imageView_second_activity"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/icon_second_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />


    <Button
        android:id="@+id/button_start_second_activity"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:text="@string/string_button_start_second_activity"
        android:textSize="35dp"
        android:textColor="#fff"
        android:background="@drawable/borders_button_second_activity"
        android:drawableLeft="@drawable/icon_start_button"
        android:paddingLeft= "30dp"
        android:paddingRight= "30dp"
        android:layout_below="@+id/imageView_second_activity"
        android:layout_toLeftOf="@+id/imageView_second_activity"
        android:layout_toStartOf="@+id/imageView_second_activity"
        android:layout_marginRight="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginTop="65dp" />

    <Button
        android:id="@+id/button_configure_second_activity"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:text="@string/string_button_configure_second_activity"
        android:textSize="35dp"
        android:textColor="#fff"
        android:background="@drawable/borders_button_second_activity"
        android:drawableLeft="@drawable/icon_configure_button"
        android:paddingLeft= "30dp"
        android:paddingRight= "30dp"
        android:layout_alignTop="@+id/button_start_second_activity"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_about_second_activity"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:text="@string/string_button_about_second_activity"
        android:textSize="35dp"
        android:textColor="#fff"
        android:background="@drawable/borders_button_second_activity"
        android:drawableLeft="@drawable/icon_about_button"
        android:paddingLeft= "30dp"
        android:paddingRight= "30dp"
        android:layout_alignTop="@+id/button_configure_second_activity"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="100dp"
       />



</RelativeLayout>
