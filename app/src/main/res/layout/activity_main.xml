<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:background="@color/material_blue_grey_800"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/map" android:layout_marginBottom="100dp"
            tools:context="pt.iscte.daam.MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment" />



        <!--   Left Control  -->
        <ImageView
            android:layout_width="139dp"
            android:layout_height="75dp"
            android:id="@+id/imageView2"
            android:layout_marginLeft="-190dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/controlbackground"
            android:layout_gravity="center_horizontal|bottom" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/control2"
            android:id="@+id/button_left_control2"
            android:layout_marginLeft="-125dp"
            android:background="?android:selectableItemBackground"
            android:layout_gravity="center_horizontal|bottom" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-255dp"
            android:id="@+id/button_left_control1"
            android:src="@drawable/control1"

            android:background="?android:selectableItemBackground"
            android:layout_gravity="center_horizontal|bottom" />

        <!--   Right Control  -->
        <ImageView
            android:layout_width="139dp"
            android:layout_height="75dp"
            android:id="@+id/imageView3"
            android:layout_marginLeft="180dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/controlbackground"
            android:layout_gravity="center_horizontal|bottom" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/control2"
            android:id="@+id/button_right_control2"
            android:layout_marginLeft="255dp"
            android:background="?android:selectableItemBackground"
            android:layout_gravity="center_horizontal|bottom" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:id="@+id/button_right_control1"
            android:src="@drawable/control1"

            android:background="?android:selectableItemBackground"
            android:layout_gravity="center_horizontal|bottom" />

    </FrameLayout>







       <!-- android:layout_gravity="start" tells DrawerLayout to treat
            this as a sliding drawer on the left side for left-to-right
            languages and on the right side for right-to-left languages.
            The drawer is given a fixed width in dp and extends the full height of
            the container. A solid background is used for contrast
            with the content view. -->
         
         
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ffff"/>

    <ListView
        android:id="@+id/right_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ffff"/>

</android.support.v4.widget.DrawerLayout>
